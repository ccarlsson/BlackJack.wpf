<Window x:Class="BlackJack.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:viewModels="clr-namespace:BlackJack.Presentation.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="560"
        Width="980"
        Background="#0B1117">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="36"
                            CornerRadius="12"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="6"/>
    </shell:WindowChrome.WindowChrome>
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="24">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B1117" Offset="0"/>
                <GradientStop Color="#0E1722" Offset="0.5"/>
                <GradientStop Color="#121B26" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="Transparent"
                shell:WindowChrome.IsHitTestVisibleInChrome="True">
            <TextBlock Text="{Binding Title}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextMuted}"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Text="{Binding Title}"
                   FontSize="30"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource Accent}"/>

        <Border Grid.Row="2"
                Background="{StaticResource Panel}"
                BorderBrush="#1E2A3A"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14"
                Margin="0,12,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Player" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                    <TextBox Text="{Binding PlayerName}" Width="180" Margin="12,0,0,0"/>
                    <TextBlock Text="Round:" Margin="24,0,0,0" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                    <TextBlock Text="{Binding RoundStateText}" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Status:" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                    <TextBlock Text="{Binding StatusText}" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Decks" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                    <ComboBox ItemsSource="{Binding DeckCounts}"
                              SelectedItem="{Binding DeckCount}"
                              Width="120"
                              IsEnabled="{Binding IsSettingsEnabled}"
                              Margin="12,0,0,0"/>
                    <CheckBox Content="Stand on soft 17"
                              IsChecked="{Binding StandOnSoft17}"
                              IsEnabled="{Binding IsSettingsEnabled}"
                              Margin="24,0,0,0"/>
                </StackPanel>
                <TextBlock Text="{Binding DeckCountError}"
                           Foreground="#E85D75"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3" Margin="0,18,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource PanelAlt}" BorderBrush="#1E2A3A" BorderThickness="1" CornerRadius="14" Padding="16" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Player hands" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                    <ItemsControl ItemsSource="{Binding PlayerHands}" Margin="0,10,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <StaticResource ResourceKey="HandTemplate"/>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource PanelAlt}" BorderBrush="#1E2A3A" BorderThickness="1" CornerRadius="14" Padding="16">
                <StackPanel>
                    <TextBlock Text="Dealer hand" FontWeight="SemiBold" Foreground="{StaticResource TextMuted}"/>
                    <TextBlock Text="{Binding DealerValueText}" Margin="0,6,0,0" FontSize="16"/>
                    <ItemsControl ItemsSource="{Binding DealerCards}" Margin="0,8,0,0">
                        <ItemsControl.ItemTemplate>
                            <StaticResource ResourceKey="CardTemplate"/>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="4" Margin="0,18,0,0">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Left">
            <Button Content="New round"
                    Command="{Binding NewRoundCommand}"
                    Margin="0,0,12,0"/>
            <Button Content="Hit"
                    Command="{Binding HitCommand}"
                    Margin="0,0,12,0"/>
            <Button Content="Stand"
                    Command="{Binding StandCommand}"
                    Margin="0,0,12,0"/>
            <Button Content="Double down"
                Command="{Binding DoubleDownCommand}"
                Margin="0,0,12,0"/>
            <Button Content="Split"
                Command="{Binding SplitCommand}"
                Margin="0,0,12,0"/>
            <Button Content="Finish round"
                    Command="{Binding FinishRoundCommand}"
                Background="#1F2E3D"
                BorderBrush="#2F3F55"/>
            </StackPanel>

            <Button Grid.Column="1"
                Content="Exit"
                    Command="{Binding ExitCommand}"
                Background="#2A1A20"
                BorderBrush="#3B1F28"/>
        </Grid>
    </Grid>
</Window>
