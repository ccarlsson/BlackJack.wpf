<Application x:Class="BlackJack.Bootstrapper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BlackJack.Bootstrapper">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/BlackJack.Presentation;component/Styles/Colors.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/BlackJack.Presentation;component/Styles/Controls.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/BlackJack.Presentation;component/Styles/Templates.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
